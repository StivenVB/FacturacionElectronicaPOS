@model FEPOS.Models.SecurityModule.LoginModel
@using reCAPTCHA.MVC

@{
    ViewBag.Title = "Iniciar Sesión";
}

<h2>Iniciar Sesión</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Login</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @if (ViewBag.ErrorMessage != null)
    {
        <strong class="text-danger">@ViewBag.ErrorMessage</strong>
    }
    <div class="form-group">
        @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" }, style = "width:100%;height:34px" })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Captcha", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="text-left col-md-10">
            @Html.Recaptcha()
            @Html.ValidationMessage("ReCaptcha",
                        new { @class = "text-danger" })
            <span id="recaptchaMsg" class="text-danger"></span>
            <br />
            <br />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10" style="margin-top:" 40px">
            <input type="submit" value="Iniciar Sesion" class="btn btn-primary" />
        </div>
    </div>
</div>
}
